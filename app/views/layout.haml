!!!
%html
  %head
    %title= @title
    %link(rel="stylesheet" href="/style.css")

  %body
    .navbar.navbar-expand-lg.navbar-dark.bg-emerald.mb-3.justify-content-center
      %ul.navbar-nav
        %li.nav-item
          %a.nav-link(href="/") Home
        %li.nav-item
          %a.nav-link(href="/users") Users
        %li.nav-item.mr-5
          %a.nav-link(href="/shows") Shows
        - if logged_in?
          %li.nav-item
            %a.nav-link(href="/users/#{current_user.slug}")= current_user.username
          %li.nav-item
            %a.nav-link(href="/manage") Manage Shows
          %li.nav-item
            %a.nav-link(href="/shows/new") New Show
          %li.nav-item
            %a.nav-link(href="/logout") Log Out

        - else
          %li.nav-item
            %a.nav-link(href="/login") Log In
          %li.nav-item
            %a.nav-link(href="/signup") Sign Up

    .container
      = yield

    %script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
    %script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
    %script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
    %script(defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js")
