%h1.display-4 New User

%br

.row
  .col-md-6
    %form(action="/signup" method="post")
      .form-group
        %input#username.form-control(type="text" name="user[username]" placeholder="Username")

      .form-group
        %input#email.form-control(type="email" name="user[email]" placeholder="Email")

      .form-group
        %input#password.form-control(type="password" name="user[password]" placeholder="Password")

      %input#submit.btn.btn-info(type="submit" name="submit" value="Create User")
