<% @title = "Log In" %>

<h1 class="display-4">Log In</h1>
<div class="row">
  <div class="col-md-6">
    <form action="/login" method="post">
      <div class="form-group">
        <input class="form-control" id="username" type="text" name="username" placeholder="Username"></input>
      </div>
      <div class="form-group">
        <input class="form-control" id="password" type="password" name="password" placeholder="Password"></input>
      </div>
      <div class="form-group">
        <input class="btn btn-emerald" id="submit" type="submit" name="submit" value="Log In"></input>
      </div>
    </form>
  </div>
</div>
