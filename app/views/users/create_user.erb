<% @title = 'New User' %>
<h1 class="display-4">New User</h1>
<div class="row">
  <div class="col-md-6">
    <form action="/signup" method="post">
      <div class="form-group">
        <input class="form-control" id="username" type="text" name="user[username]" placeholder="Username"></input>
      </div>
      <div class="form-group">
        <input class="form-control" id="email" type="email" name="user[email]" placeholder="Email"></input>
      </div>
      <div class="form-group">
        <input class="form-control" id="password" type="password" name="user[password]" placeholder="Password"></input>
      </div>
      <input class="btn btn-emerald" id="submit" type="submit" name="submit" value="Create User"></input>
    </form>
  </div>
</div>
