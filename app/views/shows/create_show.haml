- @title = 'Create Show'

%h1.display-4 Add A Show

%form(action="/shows/new" method="post")
  .form-row
    .col-md-5.mb-2
      %input#name.form-control(type="text" name="show[name]" placeholder="Show Name")
    .col-md-3
      %input#year.form-control(type="number" name="show[year]" placeholder="Year" min=1940 max=2200)

  .form-row
    .col-md-8
      %input#year.form-control(type="text" name="show[description]" placeholder="Add a description..")

  %br

  .form-check
    %input#add.form-check-input(type="checkbox" name="toadd" checked)
    %label.form-check-label(for="add") Add to shows?

  %br

  .form-group
    %input#submit.btn.btn-emerald(type="submit" name="submit" value="Create Show")