<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title>
      <%= @title %>
    </title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/fontawesome-all.css">
  </head>
  <body>
    <nav class="navbar navbar-expand navbar-dark bg-emerald mb-3">
      <a class="navbar-brand" href="/">TV Show Organizer</a>
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/"> Home</a>
        <a class="nav-item nav-link" href="/users"> Users</a>
        <a class="nav-link" href="/shows"> Shows</a>
      </div>
      <div class="navbar-nav ml-auto">
        <% if logged_in? %>
        
          <a class="nav-item nav-link" href="<%= "/users/#{current_user.slug}" %>"><%= current_user.username %></a>
          <a class="nav-item nav-link" href="/manage"> Manage Shows</a>
          <a class="nav-item nav-link" href="/shows/new"> New Show</a>
          <a class="nav-item nav-link" href="/logout"> Log Out</a>
        <% else %>
          <a class="nav-item nav-link" href="/login"> Log In</a>
          <a class="nav-item nav-link" href="/signup"> Sign Up</a>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <% if flash.has?(:message) %>
        <div class="row">
          <div class="col-auto">
            <div class="alert alert-eton alert-dismissible mb-4">
              <button class="close" type="button" data-dismiss="alert"> X </button>
              <%= flash[:message] %>
            </div>
          </div>
        </div>
      <% end %>
      <%= yield %>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
